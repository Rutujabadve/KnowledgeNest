# KnowledgeNest Environment Variables
# Copy this file to .env and update with your values

# JWT Secret Key (change in production!)
JWT_SECRET=dev-secret-key-change-in-production

# Database Configuration
# MySQL (Auth Service)
MYSQL_ROOT_PASSWORD=password
MYSQL_DATABASE=knowledge_nest_auth
MYSQL_HOST=localhost
MYSQL_PORT=3306

# PostgreSQL (Course & Review Services)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=knowledge_nest_courses
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Service URLs (for Docker)
AUTH_SERVICE_URL=http://auth_service:5001
COURSE_SERVICE_URL=http://course_service:5002
REVIEW_SERVICE_URL=http://review_service:5003

# Service Ports
AUTH_SERVICE_PORT=5001
COURSE_SERVICE_PORT=5002
REVIEW_SERVICE_PORT=5003
API_GATEWAY_PORT=8000
FRONTEND_PORT=3000

# RabbitMQ Configuration
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=password
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# Flask Environment
FLASK_ENV=development

# Frontend API URL
VITE_API_URL=http://localhost:8000
